<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <div class="container-fluid">
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><button class="btn btn-outline-primary" style="border-radius: 20px"><%= link_to 'Show', user %></button></td>
        <td><button class="btn btn-outline-warning" style="border-radius: 20px"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td> <button class="btn btn-outline-danger" style="border-radius: 20px"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<button class="btn btn-outline-success" style="border-radius: 20px"><%= link_to 'New User', new_user_path %></button>
